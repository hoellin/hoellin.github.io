      adsnote = {Provided by the SAO/NASA Astrophysics Data System},
      html = {https://www.aanda.org/articles/aa/full_html/2025/07/aa53416-24/aa53416-24.html},
      preview={miss_redshifts_trunc.png},
      bibtex_show={true},
}

